<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#000"
tools:context=".StartupPage">
<RelativeLayout
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgA"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:background="@drawable/startup_light"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/imgB"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        android:background="@drawable/startup_text"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/imgC"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        android:background="@drawable/startup_ring"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/imgC_1"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        android:background="@drawable/startup_ring"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/imgC_2"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        android:background="@drawable/startup_ring"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/imgD"
        android:onClick="gotoActive"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        android:background="@drawable/startup_main"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>



</RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>