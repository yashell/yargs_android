<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <SurfaceView
            android:id="@+id/scanner_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" >
        </SurfaceView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:background="?attr/selectableItemBackground"
                android:padding="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="扫描二维码"
                android:textColor="#ffffff"
                android:textSize="18sp" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:text="相册"
                android:gravity="center"
                android:textColor="#ffffff"
                android:onClick="openCamer"
               />


        </RelativeLayout>
<!--        frame_color 正方形框-->

        <zxing.view.ViewfinderView
            android:id="@+id/viewfinder_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:corner_color="#1272d5"
            app:frame_color="#90FFFFFF"
            app:label_text="二维码/条形码扫描"
            app:label_text_color="#389aff"
            app:laser_color="#0d2e50"
            app:mask_color="#60000000"
            app:result_color="#B0000000"
            app:result_point_color="#C0FFFF00" >
        </zxing.view.ViewfinderView>

    </FrameLayout>
</RelativeLayout>